{
    "name": "opis-colibri/twig",
    "type": "opis-colibri-module",
    "description": "Allows you to use Twig templates inside your Opis Colibri based project",
    "keywords": ["opis", "colibri", "module", "twig module", "templating"],
    "homepage": "http://opis.io",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Marius Sarca",
            "email": "marius.sarca@gmail.com"
        },
        {
            "name": "Sorin Sarca",
            "email": "sarca_sorin@hotmail.com"
        }
    ],
    "require": {
        "twig/twig": "~2.0",
        "opis-colibri/core": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Opis\\Colibri\\Modules\\Twig\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Opis\\Colibri\\Modules\\Twig\\Test\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "extra": {
        "module": {
            "title": "Twig module",
            "collector": "Opis\\Colibri\\Modules\\Twig\\Collector",
            "installer": "Opis\\Colibri\\Modules\\Twig\\Installer"
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
